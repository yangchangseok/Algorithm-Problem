
#include<iostream>
#include<stdio.h>
using namespace std;

int N; // 공연장을 대여할 수 있는 날들의 수
int L; // 이미 섭외한 공연 팀의 수 L
int arr[1000];
int test_case;

int main() {
	
	cin >> test_case; // 테스트 케이스의 수 
	
	

	float result = 99.0f; // 초기화 : 최댓값  
	

	for(int i = 0; i<test_case; i++) {
		cin >> N >> L;   
		

		for (int i = 0; i < N; i++) {
			cin >> arr[i];
		}
		while (L <= N) {
			for (int i = 0; i <= N - L; i++) {

				float avg  = 0;
				float total = 0;
				for (int j = i; j < i + L; j++) {

					total += arr[j];

					if (j == i + L - 1) {
						avg = total / L;

						if (avg < result) result = avg;
					}
				}

			}

			L++;
		}
		cout << result;
	}
	
	return 0;

}
